{
  "name": "doctrine-file",
  "version": "1.0.2",
  "description": "File-Reader for the Doctrine JSDoc Parser",
  "main": "lib/index.js",
  "scripts": {
    "clean": "rimraf lib",
    "build": "babel src --out-dir lib --ignore __tests__",
    "flow": "flow",
    "format": "prettier --write --trailing-comma all --single-quote \"src/**/*.js\"",
    "lint": "eslint src",
    "precommit": "npm test && lint-staged",
    "preversion": "npm test",
    "prepublish": "npm run clean && npm run build",
    "test": "npm run lint && npm run flow && npm run test-only",
    "test-only": "jest --collectCoverage",
    "watch": "babel src --out-dir lib --ignore __tests__ --watch"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/researchgate/doctrine-file.git"
  },
  "files": [
    "lib"
  ],
  "keywords": [
    "doctrine",
    "jsdoc",
    "parser"
  ],
  "author": "Daniel Tschinder <daniel@tschinder.de>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/researchgate/doctrine-file/issues"
  },
  "homepage": "https://github.com/researchgate/doctrine-file#readme",
  "devDependencies": {
    "babel-cli": "^6.14.0",
    "babel-eslint": "^7.0.0",
    "babel-plugin-transform-class-properties": "^6.19.0",
    "babel-plugin-transform-object-rest-spread": "^6.20.2",
    "babel-preset-env": "^1.6.0",
    "babel-preset-flow": "^6.23.0",
    "babel-register": "^6.14.0",
    "eslint": "^4.3.0",
    "eslint-config-airbnb-base": "^11.3.1",
    "eslint-plugin-import": "^2.7.0",
    "flow-bin": "^0.54.0",
    "husky": "^0.14.3",
    "jest": "^20.0.4",
    "lint-staged": "^4.0.2",
    "prettier": "^1.3.1",
    "rimraf": "^2.5.0"
  },
  "dependencies": {
    "doctrine": "^2.0.0"
  },
  "lint-staged": {
    "src/**/*.js": [
      "prettier --trailing-comma all --single-quote --write",
      "git add"
    ]
  },
  "jest": {
    "collectCoverageFrom": [
      "src/**/*.js",
      "!src/**/__tests__/**/*"
    ],
    "coverageReporters": [
      "text",
      "json"
    ],
    "roots": [
      "<rootDir>/src/"
    ]
  }
}
